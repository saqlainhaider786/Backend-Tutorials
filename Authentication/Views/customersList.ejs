<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers |</title>
    <style>
        body {
            text-align: center;
        }

        h1{
            text-decoration: underline;
        }

        div {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        table,
        th,
        td {
            text-align: center;
            border: 2px solid black;
        }

        td,
        th {
            padding: 10px;
        }
    </style>
</head>

<body>
    <div>
        <h1>Registered Customers and their Details</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Room Number</th>
                    <th>Email</th>
                    <th>Contact Number</th>
                    <th>Room Seater</th>
                </tr>
            </thead>
            <tbody>
                <% bookedRooms.forEach(cust=> { %>
                    <tr>
                        <td>
                            <%= cust.custName %>
                        </td>
                        <td>
                            <%= cust.custRoomNo %>
                        </td>
                        <td>
                            <%= cust.custEmail %>
                        </td>
                        <td>
                            <%= cust.custPhno %>
                        </td>
                        <td>
                            <%= cust.roomSeater %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>
</body>

</html>